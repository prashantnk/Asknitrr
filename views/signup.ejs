<%- include("partials/header" , {ok : login}); -%>
<h1>SignUp</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/signup" method="POST">
            <input type="hidden" name="topics" value="<%=topics%>">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" required autofocus class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" required class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">SignUp</button>
          </form>
          <h3>Note : Since you haven't registered you are redirected to this page , If You have registered , please login here :
            <button class="btn btn-dark"  role="link">
                <a class="btn btn-block"href="/login">LogIn</a>
            </button>
          </h3>
          
          <p> </p>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
            <button class="btn btn-block" >
          <a  class="btn btn-block"href="/auth/google">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </button>
        </div>
      </div>
    </div>
</div>
<%- include("./partials/footer.ejs"); -%>